{
    "manifest_version": 2,
    "name": "Kayako Helper",
    "description": "Copy Kayako Ticket ID",
    "version": "0.2.1",
    "author": "Artyom Babiy",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Copy Kayako Ticket ID"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Shift+Alt+K"
            },
            "description": "Copy Kayako Ticket ID"
        }
    },
    "permissions": [
        "menus",
        "storage",
        "tabs",
        "clipboardWrite",
        "notifications"
    ]
}
